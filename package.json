{
  "name": "note-taker-nodejs",
  "version": "1.0.0",
  "description": "A simple note-taking app written in typescript",
  "main": "server.ts",
  "author": "Ifemide <ifemiadetayo@outlook.com>",
  "license": "MIT",
  "scripts": {
    "start": "nodemon src/server",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "test": "yarn prettier-format && ENV_NAME=localTest SILENCE_LOGGER=true jest --coverage --verbose --runInBand --detectOpenHandles --forceExit"
  },
  "repository": "git@github.com:bwoodlt/note-taker-nodejs.git",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/mocha": "^9.0.0",
    "@types/supertest": "^2.0.11",
    "body-parser": "^1.19.0",
    "helmet": "^4.6.0",
    "jest": "^27.1.1",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "express": "^4.17.1",
    "http": "^0.0.1-security",
    "zod": "^3.8.2"
  }
}
