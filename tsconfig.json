{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "lib": ["es2015"],
      "strict": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": ["./types/*"]
      }
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/__mocks__",
        "**/__stubs__"
      ]
  }
